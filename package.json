{
  "name": "nexe",
  "description": "Create a single executable out of your Node.js application",
  "license": "MIT",
  "version": "6.0.0",
  "contributors": [
    "Craig Condon <craig.j.condon@gmail.com> (http://crcn.io)",
    "Jared Allard <jaredallard@outlook.com>",
    "Caleb Boyd <caleb.boyd@hotmail.com>"
  ],
  "scripts": {
    "ci:build": "tsx tasks/build.ts",
    "test": "mocha",
    "test:integration": "node index.js --target 14.15.3 -i test/integration/index.js -o integration-tests --verbose -r test/integration -r node_modules/ && npm run test:integration:run",
    "test:integration:run": "run-script-os",
    "test:integration:run:win32": "integration-tests.exe",
    "test:integration:run:default": "./integration-tests",
    "lint": "prettier --write \"{src,tasks,test}/**/*.ts\"",
    "prepare": "npm run build && npm test",
    "prebuild": "rimraf lib",
    "build": "tsc --declaration && tsc -p tasks && webpack",
    "postbuild": "tsx tasks/post-build.ts"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nexe/nexe.git"
  },
  "files": [
    "lib"
  ],
  "typings": "lib/nexe.d.ts",
  "main": "index.js",
  "bin": {
    "nexe": "index.js"
  },
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "mocha": {
    "spec": "./test/**/*.spec.ts",
    "checkLeaks": true,
    "import": "tsx"
  },
  "dependencies": {
    "@calebboyd/semaphore": "^1.3.1",
    "@yarnpkg/fslib": "^3.1.4",
    "@yarnpkg/libzip": "^3.2.2",
    "app-builder": "^7.0.4",
    "archiver": "^7.0.1",
    "chalk": "^5.6.2",
    "globby": "^16.0.0",
    "got": "^14.6.4",
    "meriyah": "^6.1.4",
    "minimist": "^1.2.8",
    "mkdirp": "^3.0.1",
    "multistream": "^4.1.0",
    "node-fetch": "^3.3.2",
    "ora": "^9.0.0",
    "resolve-dependencies": "^6.0.9",
    "rimraf": "^6.1.0",
    "run-script-os": "^1.1.6",
    "tar": "^7.5.2",
    "webpack-config-prefabs": "0.0.5"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/chai": "^5.2.3",
    "@types/lodash-es": "^4.17.12",
    "@types/minimist": "^1.2.5",
    "@types/mocha": "^10.0.10",
    "@types/multistream": "^4.1.3",
    "@types/node": "^24.10.1",
    "@types/semver": "^7.7.1",
    "chai": "^6.2.1",
    "execa": "^9.6.0",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "mocha": "^11.7.5",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "webpack-cli": "^6.0.1"
  }
}
